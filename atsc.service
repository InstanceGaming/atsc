[Unit]
Description=Actuated Traffic Signal Controller (ATSC)

[Service]
Type=forking

WorkingDirectory=%h/atsc/
ExecStart=/bin/sh %h/atsc/start.sh
ExecStop=/bin/sh %h/atsc/stop.sh

Restart=always
RestartSec=16
TimeoutSec=5
SuccessExitStatus=0

MemoryMax=64M
CPUQuota=25%
IOSchedulingClass=realtime
Nice=-20

[Install]
WantedBy=default.target
