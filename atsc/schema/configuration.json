{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "atsc_configuration",
  "description": "ATSC controller configuration file schema version 1",
  "type": "object",
  "propertyNames": {
    "pattern": "^[A-Za-z-][A-Za-z0-9-]*$"
  },
  "required": [
    "version",
    "device",
    "bus",
    "network",
    "init",
    "phases",
    "idling",
    "rings",
    "barriers",
    "calls",
    "default-timing",
    "random-actuation"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "const": 3
    },
    "bus": {
      "type": "object",
      "required": [
        "enabled"
      ],
      "properties": {
        "baud": {
          "type": "number",
          "minimum": 1
        },
        "response-attempts": {
          "type": "number",
          "minimum": 0
        },
        "port": {
          "type": "string",
          "minimum": 1
        },
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "calls": {
      "type": "object",
      "required": [
        "max-age",
        "weights"
      ],
      "properties": {
        "max-age": {
          "type": "integer",
          "minimum": 2
        },
        "weights": {
          "type": "object",
          "properties": {
            "^system|active-barrier|duplicate-factor$": {
              "type": "integer",
              "minimum": 0
            }
          }
        }
      }
    },
    "init": {
      "type": "object",
      "required": [
        "mode",
        "recall-all",
        "cet-delay"
      ],
      "properties": {
        "mode": {
          "type": "string",
          "enum": [
            "dark",
            "cet",
            "cxt",
            "ls-flash",
            "normal"
          ]
        },
        "recall-all": {
          "type": "boolean"
        },
        "cet-delay": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "inputs": {
      "type": "array",
      "items": {
        "required": [
          "slot",
          "ignore",
          "active",
          "action",
          "targets"
        ],
        "properties": {
          "slot": {
            "type": "integer",
            "minimum": 1
          },
          "ignore": {
            "type": "boolean"
          },
          "active": {
            "type": "string",
            "enum": [
              "high",
              "low",
              "rising",
              "falling"
            ]
          },
          "action": {
            "type": "string",
            "enum": [
              "call",
              "detect",
              "preemption",
              "ls-flash",
              "fya-inhibit",
              "ped-clearance-inhibit",
              "stop-running"
            ]
          },
          "targets": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "integer",
              "minimum": 1,
              "uniqueItems": true
            }
          }
        }
      }
    },
    "default-timing": {
      "type": "object",
      "required": [
        "min-service",
        "rclr",
        "caution",
        "extend",
        "go",
        "pclr",
        "walk",
        "max-go"
      ],
      "properties": {
        "^min-service|rclr|caution|extend|go|pclr|walk|max-go$": {
          "type": "number",
          "minimum": 0,
          "maximum": 10000
        }
      }
    },
    "barriers": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": {
        "type": "array",
        "minItems": 4,
        "maxItems": 4,
        "uniqueItems": true
      }
    },
    "rings": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": {
        "type": "array",
        "minItems": 4,
        "maxItems": 4,
        "uniqueItems": true
      }
    },
    "phases": {
      "type": "array",
      "minItems": 2,
      "maxItems": 8,
      "items": {
        "required": [
          "flash-mode",
          "load-switches"
        ],
        "properties": {
          "timing": {
            "type": "object",
            "properties": {
              "^min-stop|rclr|caution|extend|go|pclr|walk|max-go$": {
                "type": "number",
                "minimum": 0,
                "maximum": 999
              }
            }
          },
          "flash-mode": {
            "type": "string",
            "enum": [
              "red",
              "yellow"
            ]
          },
          "load-switches": {
            "type": "object",
            "required": [
              "vehicle"
            ],
            "properties": {
              "^vehicle|ped$": {
                "type": "integer",
                "minimum": 1
              }
            }
          }
        }
      }
    },
    "idling": {
      "type": "object",
      "required": [
        "serve-delay",
        "phases"
      ],
      "properties": {
        "serve-delay": {
          "type": "number",
          "minimum": 0.0
        },
        "phases": {
          "type": "array",
          "uniqueItems": true
        }
      }
    },
    "random-actuation": {
      "type": "object",
      "required": [
        "min",
        "max",
        "enabled",
        "delay"
      ],
      "properties": {
        "min": {
          "type": "number",
          "minimum": 1
        },
        "seed": {
          "type": "number",
          "minimum": 0
        },
        "delay": {
          "type": "number",
          "minimum": 0
        },
        "max": {
          "type": "number",
          "minimum": 2
        },
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "device": {
      "type": "object",
      "required": [
        "name",
        "location"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "location": {
          "type": "object",
          "required": [
            "timezone"
          ],
          "properties": {
            "timezone": {
              "type": "string"
            }
          }
        }
      }
    },
    "network": {
      "type": "object",
      "required": [
        "enabled",
        "monitor"
      ],
      "properties": {
        "monitor": {
          "type": "object",
          "required": [
            "port",
            "enabled"
          ],
          "properties": {
            "port": {
              "type": "number",
              "minimum": 1
            },
            "enabled": {
              "type": "boolean"
            }
          }
        },
        "interface": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        }
      }
    }
  }
}
