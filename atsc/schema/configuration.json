{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "atsc_configuration",
  "description": "ATSC controller configuration file schema version 1",
  "type": "object",
  "propertyNames": {
    "pattern": "^[A-Za-z-][A-Za-z0-9-]*$"
  },
  "required": [
    "version",
    "device",
    "bus",
    "network",
    "init",
    "phases",
    "idling",
    "rings",
    "barriers",
    "default-timing",
    "random-actuation"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "const": 5
    },
    "device": {
      "type": "object",
      "required": [
        "name",
        "location"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "location": {
          "type": "object",
          "required": [
            "timezone"
          ],
          "properties": {
            "timezone": {
              "type": "string"
            }
          }
        }
      }
    },
    "network": {
      "type": "object",
      "required": [
        "enabled",
        "monitor"
      ],
      "properties": {
        "monitor": {
          "type": "object",
          "required": [
            "port",
            "enabled"
          ],
          "properties": {
            "port": {
              "type": "number",
              "minimum": 1
            },
            "enabled": {
              "type": "boolean"
            }
          }
        },
        "interface": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "bus": {
      "type": "object",
      "required": [
        "enabled"
      ],
      "properties": {
        "baud": {
          "type": "number",
          "minimum": 1
        },
        "response-attempts": {
          "type": "number",
          "minimum": 0
        },
        "port": {
          "type": "string",
          "minimum": 1
        },
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "init": {
      "type": "object",
      "required": [
        "mode",
        "recall-all",
        "cet-delay"
      ],
      "properties": {
        "mode": {
          "type": "string",
          "enum": [
            "dark",
            "cet",
            "cxt",
            "ls-flash",
            "normal"
          ]
        },
        "recall-all": {
          "type": "boolean"
        },
        "cet-delay": {
          "type": "number",
          "minimum": 1
        }
      }
    },
    "random-actuation": {
      "type": "object",
      "required": [
        "min",
        "max",
        "enabled",
        "delay"
      ],
      "properties": {
        "min": {
          "type": "number",
          "minimum": 1
        },
        "seed": {
          "type": "number",
          "minimum": 0
        },
        "delay": {
          "type": "number",
          "minimum": 0
        },
        "max": {
          "type": "number",
          "minimum": 2
        },
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "idling": {
      "type": "object",
      "required": [
        "phases"
      ],
      "properties": {
        "phases": {
          "type": "array",
          "uniqueItems": true
        }
      }
    },
    "default-timing": {
      "type": "object",
      "required": [
        "service-clear",
        "service-min",
        "service-max",
        "caution",
        "gap",
        "gap-reduce",
        "gap-min",
        "gap-max",
        "walk-min",
        "walk-max",
        "ped-clear"
      ],
      "properties": {
        "^service-clear|service-min|service-max|caution|gap|gap-reduce|gap-min|gap-max|walk-min|walk-max|ped-clear$": {
          "type": "number",
          "minimum": 0,
          "maximum": 1000
        }
      }
    },
    "phases": {
      "type": "array",
      "minItems": 2,
      "maxItems": 8,
      "items": {
        "required": [
          "id",
          "flash-mode",
          "load-switches"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "minimum": 1
          },
          "timing": {
            "type": "object",
            "properties": {
              "^service-clear|service-min|service-max|caution|gap|gap-reduce|gap-min|gap-max|walk-min|walk-max|ped-clear$": {
                "type": "number",
                "minimum": 0,
                "maximum": 1000
              }
            }
          },
          "flash-mode": {
            "type": "string",
            "enum": [
              "red",
              "yellow"
            ]
          },
          "load-switches": {
            "type": "object",
            "required": [
              "vehicle"
            ],
            "properties": {
              "^vehicle|ped$": {
                "type": "integer",
                "minimum": 1
              }
            }
          }
        }
      }
    },
    "rings": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": {
        "type": "array",
        "minItems": 4,
        "maxItems": 4,
        "uniqueItems": true
      }
    },
    "barriers": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": {
        "type": "array",
        "minItems": 4,
        "maxItems": 4,
        "uniqueItems": true
      }
    },
    "inputs": {
      "type": "array",
      "items": {
        "required": [
          "id",
          "action"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "minimum": 1
          },
          "action": {
            "type": "string",
            "enum": [
              "ignore",
              "recall",
              "preemption",
              "time-freeze",
              "tech-flash",
              "call-inhibit",
              "extend-inhibit",
              "ped-clear-inhibit",
              "dark",
              "random-recall-inhibit"
            ]
          },
          "recall-type": {
            "type": "string",
            "enum": [
              "maintain",
              "latch"
            ]
          },
          "targets": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "integer",
              "minimum": 1,
              "uniqueItems": true
            }
          }
        },
        "if": {
          "properties": {
            "action": {
              "const": "recall"
            }
          },
          "required": [
            "targets",
            "recall-type"
          ]
        },
        "then": {
          "required": []
        }
      }
    }
  }
}
