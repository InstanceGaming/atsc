{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "atsc_configuration",
  "description": "ATSC controller configuration file schema version 1",
  "type": "object",
  "propertyNames": {
    "pattern": "^[A-Za-z-][A-Za-z0-9-]*$"
  },
  "required": [
    "scheduler",
    "bus",
    "network",
    "schedules",
    "channels",
    "init",
    "device",
    "calls",
    "global-interval-bounds"
  ],
  "properties": {
    "scheduler": {
      "type": "object",
      "properties": {
        "minimum-runtime": {
          "type": "number",
          "minimum": 1
        }
      }
    },
    "bus": {
      "type": "object",
      "properties": {
        "baud": {
          "type": "number",
          "minimum": 1
        },
        "response-timeout": {
          "type": "number",
          "minimum": 0
        },
        "response-attempts": {
          "type": "number",
          "minimum": 0
        },
        "port": {
          "type": "string",
          "minimum": 1
        },
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "calls": {
      "type": "object",
      "properties": {
        "max-age": {
          "type": "integer",
          "minimum": 2
        },
        "weights": {
          "type": "object",
          "properties": {
            "^system|active-barrier$": {
              "type": "integer",
              "minimum": 0
            }
          }
        }
      }
    },
    "init": {
      "type": "object",
      "properties": {
        "mode": {
          "type": "string",
          "enum": [
            "dark",
            "cet",
            "cxt",
            "ls-flash",
            "normal"
          ]
        },
        "red-clearance": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "channels": {
      "type": "array",
      "items": {
        "properties": {
          "mode": {
            "type": "string",
            "enum": [
              "disabled",
              "vehicle",
              "pedestrian",
              "fya"
            ]
          },
          "flash-mode": {
            "type": "string",
            "enum": [
              "dark",
              "red",
              "yellow"
            ]
          }
        }
      }
    },
    "inputs": {
      "type": "array",
      "items": {
        "properties": {
          "slot": {
            "type": "integer",
            "minimum": 1
          },
          "ignore": {
            "type": "boolean"
          },
          "active": {
            "type": "string",
            "enum": [
              "high",
              "low",
              "rising",
              "falling"
            ]
          },
          "action": {
            "type": "string",
            "enum": [
              "call",
              "preemption",
              "ls-flash",
              "fya-inhibit",
              "ped-clearance-inhibit",
              "stop-running"
            ]
          },
          "targets": {
            "type": "array",
            "items": {
              "type": "integer",
              "minItems": 1,
              "uniqueItems": true
            }
          }
        }
      }
    },
    "global-interval-bounds": {
      "type": "object",
      "required": [
        "stop",
        "caution",
        "go",
        "fya",
        "ped-clear"
      ],
      "properties": {
        "^stop|caution|go|fya|ped-clear$": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "minimum": 0,
            "items": {
              "type": "integer",
              "uniqueItems": true
            }
        }
      }
    },
    "schedules": {
      "type": "array",
      "items": {
        "properties": {
          "mode": {
            "type": "string",
            "enum": [
              "dark",
              "cet",
              "cxt",
              "ls-flash",
              "normal"
            ]
          },
          "barriers": {
            "type": "array",
            "maxLength": 2,
            "items": {
              "properties": {
                "red-clearance": {
                  "type": "number",
                  "minimum": 0
                },
                "phases": {
                  "type": "array",
                  "items": {
                    "type": "integer",
                    "minItems": 1,
                    "uniqueItems": true
                  }
                },
                "preemption": {
                  "type": "object",
                  "properties": {
                    "duration": {
                      "type": "integer",
                      "minimum": 1
                    }
                  }
                },
                "singles": {
                  "type": "boolean"
                }
              }
            }
          },
          "rings": {
            "type": "array",
            "maxItems": 2,
            "items": {
              "properties": {
                "phases": {
                  "type": "array",
                  "items": {
                    "type": "integer",
                    "minItems": 1,
                    "uniqueItems": true
                  }
                }
              }
            }
          },
          "blocks": {
            "type": "array",
            "items": {
              "properties": {
                "start": {
                  "type": "string"
                },
                "end": {
                  "type": "string"
                },
                "day-exceptions": {
                  "type": "array",
                  "items": {
                    "type": "integer",
                    "uniqueItems": true
                  }
                },
                "calendar": {
                  "type": "string"
                }
              }
            }
          },
          "name": {
            "type": "string"
          },
          "free": {
            "type": "boolean"
          },
          "enabled": {
            "type": "boolean"
          },
          "phases": {
            "type": "array",
            "items": {
              "properties": {
                "timesheet": {
                  "type": "object",
                  "properties": {
                    "^stop|caution|go|fya|ped-clear$": {
                      "anyOf": [
                        {
                          "type": "array",
                          "minItems": 3,
                          "maxItems": 3
                        },
                        {
                          "type": "integer",
                          "minimum": 1
                        }
                      ]
                    }
                  }
                },
                "channels": {
                  "type": "array",
                  "items": {
                    "type": "integer",
                    "minItems": 1,
                    "uniqueItems": true
                  }
                }
              }
            }
          }
        }
      }
    },
    "random-calls": {
      "type": "object",
      "required": ["min", "max", "enabled"],
      "properties": {
        "min": {
          "type": "number",
          "minimum": 1
        },
        "seed": {
          "type": "number",
          "minimum": 0
        },
        "delay": {
          "type": "number",
          "minimum": 0
        },
        "max": {
          "type": "number",
          "minimum": 2
        },
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "device": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "location": {
          "type": "object",
          "properties": {
            "timezone": {
              "type": "string"
            }
          }
        }
      }
    },
    "network": {
      "type": "object",
      "properties": {
        "monitor": {
          "type": "object",
          "properties": {
            "port": {
              "type": "number",
              "minimum": 1
            },
            "enabled": {
              "type": "boolean"
            }
          }
        },
        "interface": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        }
      }
    }
  }
}
